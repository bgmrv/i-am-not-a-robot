{
    "name": "Aprova Digital",
    "description" : "Extensão do Google Chrome para executar e extrair informações de páginas Web",
    "version": "1.0.0",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["content.js"]
        }
    ],
    "browser_action": {
        "default_title": "Aprova Digital",
        "default_popup": "popup.html"
    },
    "permissions": [
          "activeTab",
        "tabs"
    ],
    "manifest_version": 2
}