{
    "name": "Aprova Digital",
    "description" : "Extensão do Google Chrome para executar e extrair informações de páginas Web",
    "version": "1.0.0",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["content.js"]
        }
    ],
    "browser_action": {
        "default_title": "Aprova Digital",
        "default_popup": "popup.html",
        "default_icon": {
            "16": "imagens/16.png",
            "32": "imagens/32.png",
            "48": "imagens/48.png",
            "128": "imagens/128.png"
        }
    },
    "permissions": [
        "activeTab",
        "tabs"
    ],
    "manifest_version": 2
}